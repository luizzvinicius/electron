{
  "name": "nuxt-app",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist-electron/main.js",
  "author": {
    "name": "Luiz",
    "email": "lvmcs1@aluno.ifal.edu.br"
  },
  "homepage": "https://github.com/luizzvinicius/electron",
  "build": {
    "appId": "com.electron.ALEX_IPFS",
    "asar": false,
    "productName": "electron ipfs file uploader",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": ["dmg"]
    },
    "extraFiles": [
      {
        "from": "resources",
        "to": "resources/downloads"
      }
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      ".output/**/*",
      "dist-electron"
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "build:app": "nuxt build --prerender && electron-builder"
  },
  "devDependencies": {
    "@mdi/font": "^7.4.47",
    "electron": "^28.2.1",
    "electron-builder": "^24.12.0",
    "nuxt": "^3.10.0",
    "nuxt-electron": "^0.7.0",
    "vite-plugin-electron": "^0.15.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-vuetify": "^2.0.1",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5",
    "vuetify": "^3.5.2"
  },
  "dependencies": {
    "@jamescoyle/vue-icon": "^0.1.2",
    "@mdi/js": "^7.4.47",
    "@nftstorage/ipfs-cluster": "^5.0.1",
    "electron-is-dev": "^3.0.1",
    "kubo-rpc-client": "^3.0.2",
    "sass": "^1.70.0"
  }
}